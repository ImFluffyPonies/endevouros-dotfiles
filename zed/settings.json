{
  "terminal": {
    "dock": "bottom"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },

  "base_keymap": "VSCode",

  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "show_inline_completions": true,

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "vim_mode": true,
  "relative_line_numbers": true,

  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Kanagawa Dragon"
  },

  "experimental.theme_overrides": {
    "syntax": {
      "keyword": {
        "font_style": "normal"
      },
      "function": {
        "font_style": "normal"
      }
    }
  },
  "autosave": "on_focus_change",

  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 14,

  "current_line_highlight": "none",

  "indent_guides": {
    "enabled": false
  },

  "tab_bar": {
    "show": true
  },

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },

  "scrollbar": {
    "show": "never"
  }
}
